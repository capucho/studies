<% if @project.errors.any? %>
<div id="error_explanation">
    <%= t 'general.form_error' %>
</div>
<% end %>
<%= form_for(@project) do |f| %>
<div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <%= error_tag @project, :name %>
</div>
<div class="field">
    <%= f.label :project_type %><br>
    <%= f.text_field :project_type %>
    <%= error_tag @project, :project_type %>
</div>
<div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
    <%= error_tag @project, :description %>
</div>
<div class="actions">
    <%= f.submit %>
</div>
<% end %>
